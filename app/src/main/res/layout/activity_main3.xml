<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity"
    android:background="@color/grisclaro"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/gmail"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/star_b"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/star_m" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/star_l"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="249dp"
                android:layout_height="38dp"
                android:text= "Â¡Ya queda poco para terminar!"
                android:textSize="18dp"
                android:textColor="@color/negro"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input"
                android:hint="Introduzca su localidad"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/negro"/>

            <view android:layout_height="20dp"></view>

            <EditText
                android:id="@+id/nacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input"
                android:hint="Fehca de nacimiento"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/negro"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:gravity="bottom">

            <Button
                android:id="@+id/atras3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Atras"
                android:textColor="@color/rojo"
                android:background="@color/blanco"
                android:layout_gravity="bottom"/>

            <Button
                android:id="@+id/siguiente3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Continuar"
                android:textColor="@color/rojo"
                android:background="@color/blanco"
                android:layout_gravity="bottom"
                android:layout_marginLeft="105dp"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>