<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity"
    android:background="@color/grisclaro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="175dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/gmail"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/star_b"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/star_m" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/star_l"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="275dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="274dp"
                android:layout_height="38dp"
                android:text="Ayudanos a conocer tus intereses"
                android:textSize="18sp"
                android:textColor="@color/negro"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Selecciona tus temas preferidos"
                android:textSize="20sp"
                android:textColor="@color/negro"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Buscar"
                android:paddingStart="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Política"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/negro"
                    android:gravity="top"/>
                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Ciencia"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/negro"
                    android:gravity="top"/>
                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Tecnología"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/negro"
                    android:gravity="top"/>
                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Coches"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/negro"
                    android:gravity="top"/>
                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:text="Cine"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/negro"
                    android:gravity="top"/>
                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="top">

            <Button
                android:id="@+id/atras4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Atras"
                android:textColor="@color/rojo"
                android:background="@color/blanco" />

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Finalizar"
                android:textColor="@color/rojo"
                android:background="@color/blanco"
                android:layout_marginLeft="160dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>